<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingVertical="0dp"
    android:layout_marginHorizontal="8dp"
    tools:context="com.android.DataMahasiswaList.DetailActivity"
    android:id="@+id/frame_container">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/foto">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                app:cardCornerRadius="250dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:scaleType="center"
                    android:id="@+id/foto_mahasiswa"
                    />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp"
        android:layout_below="@+id/foto">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="Nama"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama_mahasiswa"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nim"
        android:layout_below="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="NIM"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="6"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nim_mahasiswa"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_weight="5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/email"
        android:layout_below="@+id/nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="Email"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_mahasiswa"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fakultas"
        android:layout_below="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Fakultas"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="6"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fklts_mahasiswa"
            android:textColor="@color/textColor"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/prodi"
        android:layout_below="@+id/fakultas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Program Studi"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="6"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prodi_mahasiswa"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_weight="5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/semester"
        android:layout_below="@+id/prodi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Semester Terdaftar"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="6"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sem_mahasiswa"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_weight="5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/status"
        android:layout_below="@+id/semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="6"/>

        <FrameLayout
            android:paddingLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stat_mahasiswa"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:paddingVertical="1dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/rounded_corner"/>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>